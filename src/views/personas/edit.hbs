<div class="container mx-auto p-4">
    <div class="flex flex-wrap justify-center">
        <!-- Columna Izquierda: Formulario -->
        <div class="w-full max-w-md">
            <div class="bg-white shadow-lg rounded-lg text-center">
                <div class="bg-blue-500 text-white py-4 rounded-t-lg">
                    <h3 class="text-xl font-bold uppercase">Editando Cliente</h3>
                </div>
                <div class="p-6">
                    <form action="/edit/{{cliente.Cedula}}" method="post">
                        <div class="mt-4">
                            <label class="block text-left font-medium mb-1" for="Cedula">Cédula</label>
                            <input type="text" class="w-full border border-gray-300 p-2 rounded" name="Cedula" id="Cedula" value="{{cliente.Cedula}}" placeholder="Ejemplo: 12345678" required>
                        </div>
                        <div class="mt-4">
                            <label class="block text-left font-medium mb-1" for="Nombres">Nombres</label>
                            <input type="text" class="w-full border border-gray-300 p-2 rounded" name="Nombres" id="Nombres" value="{{cliente.Nombres}}" placeholder="Ejemplo: Luis Angel" required>
                        </div>
                        <div class="mt-4">
                            <label class="block text-left font-medium mb-1" for="Apellidos">Apellidos</label>
                            <input type="text" class="w-full border border-gray-300 p-2 rounded" name="Apellidos" id="Apellidos" value="{{cliente.Apellidos}}" placeholder="Ejemplo: Fernandez" required>
                        </div>
                        <div class="mt-4">
                            <label class="block text-left font-medium mb-1" for="Direccion">Dirección</label>
                            <input type="text" class="w-full border border-gray-300 p-2 rounded" name="Direccion" id="Direccion" value="{{cliente.Direccion}}" placeholder="Ejemplo: Calle 123, Ciudad" required>
                        </div>
                        <div class="mt-4">
                            <label class="block text-left font-medium mb-1" for="Ubicacion">Ubicación</label>
                            <input type="text" class="w-full border border-gray-300 p-2 rounded" name="Ubicacion" id="Ubicacion" value="{{cliente.Ubicacion}}" placeholder="Ejemplo: Coordenadas o descripción" required readonly>
                        </div>
                        <div class="mt-6">
                            <button class="w-full bg-green-500 text-white py-2 rounded hover:bg-green-600">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
 <!-- Columna Derecha: Mapa y Buscador -->
        <div class="w-full lg:w-1/2 p-4">
            <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
                <button onclick="searchAddress()" class="mt-2 w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Buscar</button>
                <div id="map" class="mt-4 h-72 rounded-lg shadow-md"></div>
            </div>
        </div>
    </div>
</div>